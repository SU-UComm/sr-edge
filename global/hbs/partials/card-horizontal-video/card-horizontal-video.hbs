<article class="su-relative su-flex su-flex-col lg:su-flex-row su-gap-30 md:su-gap-38 2xl:su-gap-72 su-items-start lg:su-items-center su-p-34 md:su-p-61 lg:su-p-38 2xl:su-pl-76 su-bg-white dark:su-bg-black-true su-text-black dark:su-text-white">
    <div class="su-relative su-w-full lg:su-basis-[50%] xl:su-basis-[40%] 2xl:su-basis-[30%]">
        <h3 class="su-type-3 su-leading-display su-rs-mb-0">
            {{~#if storyLink}}
            <a
            href="{{storyLink}}"
            class="su-group su-text-black su-transition dark:su-text-white hocus:su-text-digital-red dark:hocus:su-text-dark-mode-red hocus:su-underline"
            rel={{getStringByCondition value=isRealExternalLink expectedValue=true trueResult="noopener noreferrer" falseResult=undefined}}
            >
                <span data-se="heading">{{heading}}</span>
                {{~#if isRealExternalLink}}
                {{!-- Use this whitespace-nowrap trick so icon won't get pushed to the next line on its own --}}
                <span class="su-group su-whitespace-nowrap">
                    &#65279;
                    {{> fontawesome-icon
                        icon="arrow-up-right"
                        set="regular"
                        title="(link is external)"
                        width=24
                        classes="su-h-auto su-align-middle su-text-digital-red dark:su-text-dark-mode-red group-hocus:su-translate-x-01em group-hocus:su--translate-y-01em su-transition-transform"
                    }}
                </span>
                {{~/if~}}
            </a>
            {{~else~}}
            <span data-se="heading">{{heading}}</span>
            {{~/if~}}
        </h3>
        {{~#if description~}}
        <div class="su-max-w-prose md:su-max-w-[45ch] lg:su-max-w-none su-card-paragraph *:last:su-mb-0 *:su-leading-display xl:*:su-leading-snug" data-se="description">
            {{{description}}}
        </div>
        {{~/if~}}
    </div>
    <div class="su-w-full lg:su-basis-[50%] xl:su-basis-[60%] 2xl:su-basis-[70%] su-relative focus-within:su-ring-4">
        {{> card-thumbnail imageUrl=videoImageUrl imageAlt=videoImageAlt videoUrl=youtubeId title=heading mediaType="video" aspectRatio="video" size="featured" videoIconClasses="group-hocus:su-scale-110 su-transition-transform" uniqueID=uniqueID}}
    </div>
</article>