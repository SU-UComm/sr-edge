<article class="su-relative su-flex su-flex-col lg:su-flex-row su-gap-30 md:su-gap-38 2xl:su-gap-72 su-items-start lg:su-items-center su-p-34 md:su-p-61 lg:su-p-38 2xl:su-pl-76 {{#if alwaysDark}}su-bg-black-true dark:su-bg-black-true su-text-white dark:su-text-white{{else}}su-bg-white dark:su-bg-black-true su-text-black dark:su-text-white{{/if}}">
    <div class="su-relative su-w-full lg:su-basis-[50%] xl:su-basis-[40%] 2xl:su-basis-[30%]">
        <h3 class="su-type-3 su-leading-display su-rs-mb-0 {{#if alwaysDark}}su-text-white dark:su-text-white{{/if}}">
            {{~#if storyLink}}
            <a
            href="{{storyLink}}"
            class="su-group su-stretched-link su-no-underline hocus:su-underline dark:su-text-white dark:hocus:su-text-dark-mode-red focus:su-outline-none {{#if alwaysDark}}su-text-white hocus:su-text-dark-mode-red{{else}}su-text-black hocus:su-text-digital-red{{/if}}"
            rel={{getStringByCondition value=isRealExternalLink expectedValue=true trueResult="noopener noreferrer" falseResult=undefined}}
            >
                <span data-se="hcardheading">{{heading}}</span>
                {{~#if isRealExternalLink~}}
                <span class="su-group su-whitespace-nowrap">
                    {{~#if alwaysDark~}}
                        {{> fontawesome-icon
                            icon="arrow-up-right"
                            set="regular"
                            title="(link is external)"
                            width=24
                            classes="fa-fw su-inline-block su-align-middle su-text-[0.8em] su-ml-5 dark:su-text-dark-mode-red group-hocus:su-translate-x-01em group-hocus:su--translate-y-01em su-transition-transform su-text-dark-mode-red"
                        }}
                    {{~else~}}
                        {{> fontawesome-icon
                            icon="arrow-up-right"
                            set="regular"
                            title="(link is external)"
                            width=24
                            classes="fa-fw su-inline-block su-align-middle su-text-[0.8em] su-ml-5 dark:su-text-dark-mode-red group-hocus:su-translate-x-01em group-hocus:su--translate-y-01em su-transition-transform su-text-digital-red"
                        }}
                    {{~/if~}}
                </span>
                {{~/if~}}
            </a>
            {{~else~}}
            <span data-se="hcardheading">{{heading}}</span>
            {{~/if~}}
        </h3>
        {{~#if description~}}
        <div class="su-max-w-prose md:su-max-w-[45ch] lg:su-max-w-none su-card-paragraph *:last:su-mb-0 *:su-leading-display xl:*:su-leading-snug" data-se="hcarddescription">
            {{{description}}}
        </div>
        {{~/if~}}
    </div>
    <div class="su-w-full lg:su-basis-[50%] xl:su-basis-[60%] 2xl:su-basis-[70%] su-relative focus-within:su-ring-4">
        {{> card-thumbnail imageUrl=videoImageUrl imageAlt=videoImageAlt videoUrl=youtubeId title=heading mediaType="video" aspectRatio="video" size="featured" videoIconClasses="group-hocus:su-scale-110 su-transition-transform" uniqueID=uniqueID}}
    </div>
</article>