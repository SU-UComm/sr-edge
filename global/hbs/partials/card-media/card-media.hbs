<article aria-label="{{title}}" data-test="media-card" class="su-component-card-media md:su-min-h-[38.4rem] su-relative su-w-full md:su-px-0 su-flex su-flex-wrap su-justify-center su-gap-20 md:su-gap-36 md:su-gap-48 md:su-flex-nowrap su-items-center">
    {{#if imageUrl}}
    <div class="su-relative su-w-full su-px-20 md:su-px-0 su-h-[34.2rem] lg:su-h-[57.2rem] lg:su-py-30 su-min-w-[24.9rem] lg:su-min-w-[38.2rem] lg:su-max-w-[38.2rem] su-flex su-items-center su-justify-center">
        <img class="su-media-card-thumb su-size-full su-object-scale-down su-object-center" src="{{imageUrl}}" alt="{{imageAlt}}" />
    </div>
    {{/if}}
    <div class="su-media-card-text su-grow su-w-full md:su-w-auto">
        {{#if taxonomy}}
        <div class="su-mb-20 md:su-mb-27">
            {{{sidebarHeading}}}
        </div>
        {{/if}}
        {{#if title}}
        <h3 class="su-text-[3.5rem] su-leading-tight md:su-text-[4rem] lg:su-text-[4.3rem] {{#if author}}su-mb-5{{else}}su-mb-15 md:su-mb-19{{/if}}">
            {{#if liveUrl}}
            <a href="{{liveUrl}}" class="su-group su-text-black su-transition dark:su-text-white hocus:su-text-digital-red dark:hocus:su-text-dark-mode-red hocus:su-underline">
                <span>{{title}}</span>
                {{#if isRealExternalLink}} 
                {{> fontawesome-icon
                    icon="arrow-up-right"
                    iconTestId="svg-arrow-up-right"
                    set="regular"
                    width=24
                    classes="su-h-auto su-align-middle su-text-digital-red dark:su-text-dark-mode-red group-hocus:su-translate-x-01em group-hocus:su--translate-y-01em su-transition-transform"
                }}
                {{/if}}                  
            </a>
            {{else}}
            <span class="su-text-black su-transition dark:su-text-white">{{title}}</span>
            {{/if}}
        </h3>
        {{/if}}
        {{#if author}}<div data-test="mediacard-author" class="su-mb-15 md:su-mb-19">{{author}}</div>{{/if}}
        {{#if type}}
        <div class="su-text-18 md:su-text-16 su-mb-15 md:su-mb-19 su-gap-6 su-text-black-70 dark:su-text-black-50 su-flex su-nowrap su-items-center su-leading-none">
            {{> fontawesome-icon
                icon=typeIcon
                iconTestId=iconTestId
                set="solid"
            }}
            <span class="su-font-semibold">{{type}}</span>
        </div>
        {{/if}}
        {{#if description}} 
        <div data-test="mediacard-description" class="*:su-my-0 *:su-leading-[125%] su-leading-[125%] *:su-text-18 su-text-18 md:*:su-text-19 md:su-text-19 lg:*:su-text-21 lg:su-text-21 dark:su-text-white su-font-sans su-w-full">
            {{description}}
        </div>
        {{/if}}
    </div>
</article>