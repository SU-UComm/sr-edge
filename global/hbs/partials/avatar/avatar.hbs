<div data-test="size-{{size}}" class="su-component-avatar su-relative su-block su-rounded-full su-bg-gradient-light-red-h su-overflow-hidden {{avatarWrapperClasses size}}">
    {{#if editMode}}
        <img class="su-absolute su-rounded-full su-object-cover su-object-center {{avatarImageClasses size}}" src="{{avatarURL}}" alt="{{avatarAlt}}" data-sq-field="avatarURL" />
    {{else}}
        <img class="su-absolute su-rounded-full su-object-cover su-object-center {{avatarImageClasses size}}" src="{{avatarURL}}" alt="{{avatarAlt}}" />
    {{/if}}
</div>