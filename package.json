{
    "name": "stanford-edge-components",
    "version": "1.0.0",
    "description": "This is the repo using the stanford edge components.",
    "keywords": [],
    "author": "Squiz",
    "license": "ISC",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "reset": "./reset.zsh",
        "lint": "npm-run-all lint:*",
        "lint:js": "eslint packages/**/*.js --report-unused-disable-directives --max-warnings 0",
        "lint:css": "stylelint \"./packages/**/*.css\" \"./packages/**/*.scss\" --allow-empty-input",
        "lint:cspell": "npx cspell 'packages/**/*.{css,scss,ts,tsx,js,jsx,md,yml,json}' --gitignore --quiet",
        "test": "vitest --coverage",
        "build": "npm-run-all build:*",
        "build:component": "vite build --config vite.config.js",
        "build:global": "vite build --config vite-global.config.js",
        "watch": "npm run build && chokidar \"./packages/**/*.{js,scss,json,html,hbs}\" --silent -c \"CHANGED_FILE={path} vite build --config vite.config.js && CHANGED_FILE={path} vite build --config vite-global.config.js\"",
        "dxp": "dxp-next cmp dev-ui ./dist",
        "dev": "concurrently \"npm run watch\" \"npm run dxp\"",
        "vermgmt": "vermgmt"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.7.2",
        "@fortawesome/free-regular-svg-icons": "^6.6.0",
        "@fortawesome/free-solid-svg-icons": "^6.6.0",
        "@fortawesome/pro-regular-svg-icons": "^6.7.2",
        "@fortawesome/pro-solid-svg-icons": "^6.7.2",
        "@testing-library/dom": "^10.4.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "@squiz/dxp-cli-next": "^5.22.1",
        "@squiz/vermgmt": "^2.0.1",
        "@testing-library/dom": "^7.31.2",
        "@testing-library/jest-dom": "^6.6.3",
        "@vitest/coverage-v8": "^2.1.8",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.1.0",
        "cspell": "^8.3.2",
        "decanter": "^7.3.1",
        "eslint": "^8.57.1",
        "globals": "^15.14.0",
        "handlebars": "^4.7.7",
        "handlebars-helpers": "^0.10.0",
        "happy-dom": "^15.11.7",
        "node-fetch": "^2.7.0",
        "npm-run-all": "^4.1.5",
        "object-hash": "^3.0.0",
        "sass": "^1.63.2",
        "stylelint": "^16.13.2",
        "stylelint-config-recommended-scss": "^14.1.0",
        "stylelint-config-standard": "^37.0.0",
        "tailwindcss": "^3.4.13",
        "vite": "^4.5.3",
        "vite-plugin-handlebars": "^2.0.0",
        "vite-plugin-raw": "^1.0.3",
        "vite-plugin-sass-dts": "^1.3.29",
        "vite-plugin-static-copy": "^0.17.1",
        "vitest": "^2.1.8"
    }
}
