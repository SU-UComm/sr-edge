{
    "name": "stanford-edge-components",
    "version": "1.0.0",
    "description": "This is the repo using the stanford edge components.",
    "keywords": [],
    "author": "Squiz",
    "license": "ISC",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "reset": "./reset.zsh",
        "lint": "npm-run-all lint:*",
        "lint:js": "eslint packages/**/*.js --report-unused-disable-directives --max-warnings 0",
        "lint:css": "stylelint \"./packages/**/*.css\" \"./packages/**/*.scss\"",
        "lint:cspell": "npx cspell 'packages/**/*.{css,scss,ts,tsx,js,jsx,md,yml,json}' --gitignore --quiet",
        "test": "npm-run-all -p test:*",
        "test:eslint": "eslint ./packages",
        "test:unit": "jest --config $(npx -y find-up-cli jest.config.js)",
        "build": "npm-run-all build:*",
        "build:component": "run-in-every directory-with-file --pattern './packages/*/manifest.json' -- vite build --config ../../vite.config.js",
        "build:insert": "./postbuild-insert-inlines.zsh",
        "build:global": "vite build --config vite-global.config.js",
        "watch": "chokidar './packages/**/*.{js,scss,json,html}' -c 'npm run build' --initial",
        "dxp": "dotenv -e .env -- dxp-next cmp dev-ui ./dist",
        "vermgmt": "vermgmt"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.6.0",
        "@fortawesome/free-regular-svg-icons": "^6.6.0",
        "@fortawesome/free-solid-svg-icons": "^6.6.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.25.4",
        "@eslint/js": "^9.9.1",
        "@squiz/component-lib": "^1.77.0",
        "@squiz/dxp-cli-next": "5.19.1",
        "@squiz/vermgmt": "^1.0.2",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.5.0",
        "autoprefixer": "^10.4.20",
        "babel-jest": "^29.7.0",
        "chokidar-cli": "^3.0.0",
        "cspell": "^8.3.2",
        "dotenv-cli": "^7.4.2",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jest": "^28.8.1",
        "eslint-plugin-prettier": "^5.1.3",
        "globals": "^15.9.0",
        "jest": "^29.6.1",
        "jest-environment-jsdom": "^29.7.0",
        "node-fetch": "^2.7.0",
        "npm-run-all": "^4.1.5",
        "object-hash": "^3.0.0",
        "postcss": "^8.4.47",
        "prettier": "^3.3.2",
        "rimraf": "^6.0.1",
        "run-in-every": "^0.2.0",
        "sass": "^1.77.8",
        "stylelint": "^16.7.0",
        "stylelint-config-recommended-scss": "^14.1.0",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-scss": "^6.4.1",
        "tailwindcss": "^3.4.13",
        "vite": "^5.4.2",
        "vite-plugin-sass-dts": "^1.3.29",
        "vite-plugin-static-copy": "^0.17.1"
    },
    "overrides": {
        "@squiz/edge-dev-render-runtime-lib": "2.1.1"
    }
}
