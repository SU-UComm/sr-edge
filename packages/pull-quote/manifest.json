{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "pullquote",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-development",
    "description": "Displays a quote for a story page along with details of the quote",
    "displayName": "Pull quote",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        }
    ],
    "icon": {
        "id": "format_quote",
        "color": {
            "type": "enum",
            "value": "red"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "displayConfiguration": {
                        "required": [],
                        "title": "Pullquote display configuration",
                        "description": "Inputs user-defined settings for the pullquote component",
                        "properties": {
                            "asset": {
                                "format": "matrix-asset-uri",
                                "type": "string",
                                "title": "Asset",
                                "description": "Select an image asset as the quotee's image"
                            },
                            "quote": {
                                "title": "Quote",
                                "description": "The quote text",
                                "type": "string",
                                "format": "multi-line",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "name": {
                                "title": "Name",
                                "description": "The name of the quotee",
                                "type": "string",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "title": {
                                "title": "Title",
                                "description": "The quotee's role or title",
                                "type": "string",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "width": {
                                "title": "Width",
                                "description": "The width of the pullquote, this option will only take effect on featured story pages, not basic story pages.",
                                "enum": [
                                    "Narrow",
                                    "Large"
                                ],
                                "type": "string",
                                "default": "Narrow",
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://stanfordNews/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/10": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/3": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/7": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/8": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/11": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/14": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/164977": {
            "type": "file",
            "path": "mocked-uris/164977.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}