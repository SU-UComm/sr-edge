{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "content-carousel",
    "type": "edge",
    "version": "3.0.0",
    "namespace": "stanford-components",
    "description": "A carousel of slides that contain WYSIWYG content.",
    "displayName": "Content Carousel",
    "mainFunction": "main",
    "icon": {
        "id": "feed",
        "color": {
            "type": "enum",
            "value": "gray"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "title": {
                        "title": "Heading",
                        "description": "The heading text",
                        "type": "string"
                    },
                    "slides": {
                        "title": "Slides",
                        "description": "The content to appear in the carousel.",
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 5,
                        "items": {
                            "required": ["content"],
                            "type": "object",
                            "properties": {
                                "content": {
                                    "title": "Content",
                                    "type": "FormattedText"
                                }
                            }
                        }
                    }
                },
                "required": []
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}
