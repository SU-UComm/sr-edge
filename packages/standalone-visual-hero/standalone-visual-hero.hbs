<section data-component="standalone-visual-hero" data-unique-id="{{uniqueID}}">
    <div class="su-rs-pt-6 su-rs-mb-3 lg:su-rs-mb-5 su-container su-container-wide">
        <div class="su-grid su-gap su-grid-cols-6 md:su-grid-cols-12">
            <div class="su-col-span-6 su-col-start-1 md:su-col-span-10 md:su-col-start-2">
                <div class="su-flex su-justify-between su-flex-wrap su-text-16 md:su-basefont-23">
                    <span class="su-flex su-items-center su-justify-center">
                        <time class="su-m-0 su-mr-4 su-font-semibold">
                            {{pubDateFormatted}}
                        </time>
                    </span>
                    {{#if hasTopicText}}
                    {{#if hasTopicLink}}
                    <a href="{{topicUrl}}"
                        class="su-font-semibold su-text-digital-red dark:su-text-dark-mode-red su-no-underline hocus:su-underline">
                        {{topicName}}
                    </a>
                    {{else}}
                    <span class="su-font-semibold su-text-digital-red dark:su-text-dark-mode-red su-no-underline">
                        {{topicName}}
                    </span>
                    {{/if}}
                    {{/if}}
                </div>
                <h1 class="su-mt-32 sm:su-mt-45 xl:su-mt-58 su-font-serif su-mb-0">
                    {{{unescapeHtml title}}}
                </h1>
                {{#if summary}}
                <p class="su-font-serif su-text-21 md:su-text-28 su-rs-mt-2 su-mb-0">
                    {{{unescapeHtml summary}}}
                </p>
                {{/if}}
            </div>

            {{#if mediaType}}
            <div class="su-col-span-6 su-col-start-1 md:su-col-span-12 md:su-col-start-1 su-w-full su-rs-mt-4">
                <figure class="su-col-span-full su-relative su-z-0">
                    <div class="su-relative su-w-full">

                        {{#ifEquals mediaType "image"}}
                        {{#if imageData.url}}
                        <img src="{{imageData.url}}" alt="{{imageData.alt}}"
                            class="su-relative su-w-full su-max-w-full" />
                        {{/if}}
                        {{/ifEquals}}

                        {{#ifEquals mediaType "video"}}
                        {{#if videoData.imageUrl}}
                        <button type="button" aria-haspopup="dialog" class="su-w-full su-aspect-[16/9] su-video-trigger"
                            data-click="open-modal" data-modal-id="{{uniqueID}}">
                            <img src="{{videoData.imageUrl}}" alt="{{videoData.imageAlt}}"
                                class="su-w-full su-h-full su-absolute su-top-0 su-left-0 su-object-cover su-object-center" />
                            <span
                                class="su-play-button-icon-hero su-transition-all su-absolute su-bottom-20 su-left-20 *:su-w-[40px] *:su-h-[40px] *:md:su-w-[60px] *:md:su-h-[60px] *:lg:su-w-[100px] *:lg:su-h-[100px]">
                                {{> svg-icons icon="video play"}}
                            </span>
                        </button>
                        {{else}}
                        {{#if videoData.videoID}}
                        <div class="su-relative su-max-w-full su-h-0 su-pb-[56.25%] su-overflow-hidden">
                            {{> embed-video isVertical=videoData.isVertical classes=videoData.class
                            videoId=videoData.videoID noAutoPlay=videoData.noAutoPlay title=videoData.title}}
                        </div>
                        {{/if}}
                        {{/if}}
                        {{/ifEquals}}

                    </div>

                    {{#if captionCredit}}
                    <figcaption class="su-text-16 su-text-black su-mb-0 su-rs-mt-neg1 dark:su-text-white">
                        {{captionCredit}}
                    </figcaption>
                    {{/if}}
                </figure>
            </div>
            {{/if}}
        </div>
    </div>

    {{#if modalData}}
    {{#if videoData.videoID}}
    <section data-modal="modal-wrapper">
        {{#> modal-content uniqueID=uniqueID titleID=modalData.titleID ariaTitle=modalData.title}}
        {{> embed-video isVertical=videoData.isVertical classes=videoData.class videoId=videoData.videoID
        noAutoPlay=videoData.noAutoPlay title=videoData.title}}
        {{/ modal-content}}
    </section>
    {{/if}}
    {{/if}}

</section>