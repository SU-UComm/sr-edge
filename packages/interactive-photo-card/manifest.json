{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "interactive-photo-card",
    "type": "edge",
    "version": "5.0.2",
    "namespace": "stanford-apb",
    "description": "2 side by side cards with 1 being a photo and 1 being a fact with the ability to flip the card over for additional information.",
    "displayName": "Interactive Photo Card",
    "mainFunction": "main",
    "icon": {
        "id": "cached",
        "color": {
            "type": "enum",
            "value": "gray"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "alwaysDark": {
                        "title": "Always dark mode",
                        "description": "If checked, this component will always display in dark mode.",
                        "type": "boolean",
                        "default": false,
                        "ui:metadata": {
                            "quickOption": true
                        }
                    },
                    "title": {
                        "title": "Title",
                        "type": "string",
                        "ui:metadata": {
                            "inlineEditable": true
                        }
                    },
                    "eyebrow": {
                        "title": "Eyebrow",
                        "description": "This is the superheading above the title.",
                        "type": "string",
                        "ui:metadata": {
                            "inlineEditable": true
                        }
                    },
                    "content": {
                        "title": "Content",
                        "description": "This is the text that goes on the flip side of the content card.",
                        "type": "FormattedText",
                        "ui:metadata": {
                            "inlineEditable": true
                        }
                    },
                    "image": {
                        "title": "Image",
                        "type": "string",
                        "format": "matrix-asset-uri"
                    },
                    "imageAlignment": {
                        "title": "Image Alignment",
                        "type": "string",
                        "default": "right",
                        "enum": [
                            "left",
                            "right"
                        ],
                        "ui:metadata": {
                            "quickOption": true
                        }
                    }
                },
                "required": [
                    "title",
                    "content",
                    "image"
                ]
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://matrixIdentifier/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/10": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://api-identifier/99100": {
            "type": "file",
            "path": "mocked-uris/99100.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}