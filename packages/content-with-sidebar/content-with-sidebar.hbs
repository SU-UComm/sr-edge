<section data-component="content-with-sidebar">
    <div class="{{containerClasses width='wide'}}">
        <div class="su-grid su-grid-cols-4 sm:su-grid-cols-12 su-grid-gap su-gap-y-0 su-mx-auto lg:su-max-w-none">
            <div class="su-col-span-full sm:su-col-start-2 sm:su-col-span-10 lg:su-col-start-2 lg:su-col-span-7 xl:su-col-start-3 xl:su-col-span-6 xl:last:[&>*]:su-mb-0">
                {{~#if heading~}}
                <h2 class="su-type-2 su-break-words">{{{unescapeHtml heading}}}</h2>
                {{~/if~}}
                {{~#if content~}}
                <div class="su-wysiwyg-content xl:last:[&>*]:su-mb-0">
                    {{{content}}}
                </div>
                {{~/if~}}
            </div>
            {{~#if infoBox~}}
            <div class="su-break-words su-col-span-full sm:su-col-start-2 sm:su-col-span-10 lg:su-col-span-4 lg:su-col-start-9">
                {{> info-box 
                    title=infoBox.title
                    content=infoBox.content
                    imageData=imageData
                    captionCredit=captionCredit
                    imagePlacement=infoBox.imageConfiguration.imagePlacement
                    buttonText=infoBox.buttonConfiguration.buttonText
                    buttonUrl=buttonUrl
                    isNewWindow=infoBox.buttonConfiguration.isNewWindow
                    isRealExternalLink=isRealExternalLink
                    containerClasses="su-bg-fog-light lg:su-mx-auto dark:su-bg-black"
                    innerClasses="su-p-20 md:su-p-36 lg:su-px-20 lg:su-py-26"
                }}
            </div>
            {{~/if~}}
        </div>
    </div>
</section> 