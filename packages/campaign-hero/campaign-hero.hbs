<section data-component="campaign-hero">
    <div class="{{containerClasses width=width}}">
        <div class="su-relative [clip-path:inset(0)] su-bg-black-true">
            <div class="su-relative">
                <div class="su-relative">
                    {{#if isBgVideo}}
                        <div class="su-sticky su-h-screen su-top-0 su-bg-black">
                            <div class="su-relative su-w-full su-h-screen su-overflow-hidden">
                                <iframe
                                    ref="iframeRef"
                                    src="{{bkgVideo}}?background=1"
                                    title="background video"
                                    class="su-absolute su-w-[177.77777778vh] su-h-[56.25vw] su-min-w-full su-min-h-full su-top-1/2 su-left-1/2 -su-translate-x-1/2 -su-translate-y-1/2"
                                    allow="autoplay; fullscreen"
                                    allowFullScreen
                                ></iframe>
                            </div>
                        </div>
                    {{else}}
                        <div class="su-absolute su-top-0 su-size-full">
                            <img
                                src="{{bkgImageUrl}}"
                                class="su-object-cover su-size-full"
                                alt="{{bkgImageAlt}}"
                            />
                        </div>
                    {{/if}}
                    <div class="su-absolute su-block su-top-0 {{#if isBgVideo}}{{#if hasQuote}}su-bg-black-true/20 su-size-full{{else}}su-bg-gradient-to-t su-from-black-true su-w-full su-h-[max(100vh,100%)]{{/if}}{{else}}su-bg-black-true/20 su-size-full{{/if}}" aria-hidden="true"></div>
                    <div class="su-cc su-relative su-z-20 {{#if isBgVideo}}su-mt-[-70vh]{{else}}su-pt-300 md:su-pt-[40vw] lg:su-pt-[26vw] 2xl:su-pt-400{{/if}} {{#if hasIntro}}{{#if isIntroPulledLeft}}su-rs-pb-6{{else}}su-rs-pb-2{{/if}}{{else}}{{#unless hasQuote}}su-pb-300 md:su-pb-[40vw] lg:su-pb-[26vw] 2xl:su-pb-400{{/unless}}{{/if}} {{#if isBgVideo}}{{#unless hasQuote}}{{#unless hasIntro}}su-rs-pb-6{{/unless}}{{/unless}}{{/if}} {{#if isBgVideoNoQuote}}su-bg-gradient-to-t su-from-black-true{{/if}}">
                        <h1 class="su-fluid-type-6 su-text-white su-text-shadow-lg su-text-center su-max-w-1000 su-mx-auto su-mb-0 su-text-balance" data-se="title">{{title}}</h1>
                        {{#unless isIntroPulledLeft}}
                            {{#if hasIntro}}
                                <div class="su-rs-mt-3 su-text-white su-text-center su-type-3 last:*:su-mb-0 *:su-leading-snug su-max-w-800 su-mx-auto {{#if youtubeId}}su-rs-pb-1{{else}}{{#if isBgVideo}}su-rs-pb-1{{else}}su-rs-pb-6{{/if}}{{/if}}" data-se="intro">{{{intro}}}</div>
                            {{/if}}
                        {{/unless}}
                        {{#if youtubeId}}
                            <button
                                class="su-block su-relative su-z-10 su-size-full hocus-visible:su-animate-pulse hocus-visible:su-scale-110 su-transition-all su-w-fit su-mx-auto {{#if isBgVideo}}su-rs-mb-2{{else}}lg:su-mb-38{{/if}} {{#unless hasIntro}}su-rs-mt-1{{/unless}}"
                                type="button"
                                aria-haspopup="dialog"
                                aria-label="Open full video in a modal"
                                data-modal-trigger="youtube-modal-{{youtubeId}}"
                            >
                                {{> fontawesome-icon icon="circle-play" set="regular" width=75 classes="su-text-[4.5rem] md:su-text-[7.5rem] su-text-white"}}
                            </button>
                            <div class="su-hidden" id="youtube-modal-{{youtubeId}}" role="dialog" aria-modal="true" aria-labelledby="youtube-modal-title-{{youtubeId}}">
                                <h2 class="su-sr-only" id="youtube-modal-title-{{youtubeId}}">YouTube Video</h2>
                                {{> embed-video videoId=youtubeId}}
                            </div>
                        {{/if}}
                        {{#if isBgVideo}}
                            <div class="su-max-w-1200 su-mx-auto {{#unless hasIntro}}su-mt-150 md:su-mt-200{{/unless}}">
                                <button
                                    type="button"
                                    class="su-group su-flex su-gap-10 su-items-end su-text-16 su-leading-display su-mr-0 su-ml-auto su-text-white su-w-fit hocus-visible:su-underline su-underline-offset-2 su-py-14 {{#if youtubeId}}su--mt-24{{/if}}"
                                    data-video-control
                                >
                                    <span data-video-control-text>Play background</span>
                                    {{> fontawesome-icon icon="circle-play" set="regular" width=20 classes="su-text-20 su-text-white group-hocus-visible:su-animate-pulse group-hocus-visible:su-scale-110 su-transition-transform" data-video-control-icon="play"}}
                                    {{> fontawesome-icon icon="circle-pause" set="regular" width=20 classes="su-hidden su-text-20 su-text-white group-hocus-visible:su-animate-pulse group-hocus-visible:su-scale-110 su-transition-transform" data-video-control-icon="pause"}}
                                </button>
                            </div>
                        {{/if}}
                        {{#if isIntroPulledLeft}}
                            {{#if hasIntro}}
                                <div class="su-type-3 lg:su-max-w-800 xl:su-max-w-1000 2xl:su-max-w-1100 su-ml-0 *:su-leading-snug su-text-white su-font-serif su-border-l su-border-color su-border-black-30 su-pl-32 md:su-pl-48 lg:su-pl-100 2xl:su-pl-170 su-py-38 last:*:su-mb-0 su-rs-mt-10">{{{intro}}}</div>
                            {{/if}}
                        {{/if}}
                        {{#if hasQuote}}
                            <div class="su-hidden lg:su-block su-max-w-1200 su-mx-auto {{#unless hasIntro}}{{#unless isBgVideo}}su-rs-mt-8{{/unless}}{{/unless}}">
                                {{> hero-quote quote=quote name=name extra=extra quoteLink=quoteLink imageSrc=quoteImageUrl imageAlt=quoteImageAlt}}
                            </div>
                        {{/if}}
                    </div>
                </div>
                {{#if hasQuote}}
                    <div class="su-cc lg:su-hidden su-bg-black-true {{#unless hasIntro}}{{#unless isBgVideo}}su-pt-80{{/unless}}{{/unless}}">
                        {{> hero-quote quote=quote name=name extra=extra quoteLink=quoteLink imageSrc=quoteImageUrl imageAlt=quoteImageAlt}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</section> 