<section data-component="leadership-hero">
    <div class="{{containerClasses width=width customClasses='su-flex su-justify-between su-flex-wrap su-rs-mt-6'}}">
        <span class="su-flex su-items-center su-justify-center su-text-16 md:su-basefont-23">
            {{~#if pubDateFormatted~}}
            <time class="su-m-0 su-mr-4 su-font-semibold">{{pubDateFormatted}}</time>
            {{~/if~}}
        </span>
        {{~#if topic.asset_name~}}
        {{~#if topic.asset_url~}}
        <a href="{{topic.asset_url}}"
            class="su-font-semibold su-text-digital-red dark:su-text-dark-mode-red su-no-underline hocus:su-underline">
            {{{unescapeHtml topic.asset_name}}}
        </a>
        {{~else~}}
        <span class="su-font-semibold su-text-digital-red dark:su-text-dark-mode-red su-no-underline">
            {{{unescapeHtml topic.asset_name}}}
        </span>
        {{~/if~}}
        {{~/if~}}
    </div>
    <div class="{{containerClasses width=width}}">
        <h1 class="su-font-bold su-rs-mt-4 su-font-serif su-mb-0 xl:su-text-[6.4rem]">
            {{{unescapeHtml title}}}
        </h1>
    </div>
</section>