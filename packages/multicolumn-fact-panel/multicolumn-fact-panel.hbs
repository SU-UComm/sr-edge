<section data-component='multicolumn-fact-panel'>
    <div class='{{containerClasses 
                    width="cc" 
                    paddingY=paddingY 
                    customClasses=customClasses
                }}'>
        {{~#if eyebrow~}}
            <span
                aria-hidden="true"
                class='su-inline-block su-font-semibold su-type-1 su-leading-display su-rs-mb-1 {{#if alwaysDark}}su-text-black-40 dark:su-text-black-40{{else}}su-text-black-60{{/if}}'
                data-se="eyebrow"
            >
                {{eyebrow}}
            </span>
        {{~/if~}}
        {{~#if title~}}
            <h2 class='su-type-4 su-rs-mb-5 su-max-w-700 {{#if alwaysDark}}su-text-white dark:su-text-white{{else}}dark:su-text-white{{/if}}' data-se="title">
                {{~#if eyebrow~}}
                <span class='su-sr-only'>{{eyebrow}}:</span>{{~/if~}}
                {{title}}
            </h2>
        {{~/if~}}
        {{~#if facts~}}
            <div
                class='{{#if alwaysDark}}su-divide-black-60 dark:su-divide-black-60{{else}}su-divide-black-30{{/if}} {{#if hasHeader}}lg:su-mt-162 2xl:su-mt-171{{/if}} su-flex su-flex-col su-items-stretch lg:su-flex-row su-gap-34 md:su-gap-61 lg:su-gap-0 su-divide-y-2 lg:su-divide-y-0 lg:su-divide-x-2 dark:su-divide-black-60'
            >
                {{~#each facts~}}
                    <div
                        class='su-flex su-flex-col su-items-center su-flex-1 su-mx-auto su-max-w-[33rem] md:su-max-w-500 lg:su-max-w-800 su-px-30 md:su-px-38 2xl:su-px-[6.6rem] su-rs-py-3'
                    >
                        {{> fontawesome-icon icon=icon set=iconSet width=70 classes="su-rs-mb-1 su-text-[5rem] xl:su-text-[6rem] su-text-black-50"}}
                        <div
                            class='su-text-black su-text-24 md:su-text-[3.3rem] lg:su-text-[2.8rem] xl:su-text-[3.3rem] su-font-serif *:su-leading-display last:*:su-mb-0 su-text-center {{#if ../alwaysDark}}su-text-white dark:su-text-white{{else}}dark:su-text-white{{/if}}'
                            data-se="content"
                        >
                            {{{content}}}
                        </div>
                    </div>
                {{~/each~}}
            </div>
        {{~/if~}}
    </div>
</section>