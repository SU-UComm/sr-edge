{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "two-column-text-callout",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-development",
    "description": "This component displays up to 2 text callouts boxes in a two-column layout.",
    "displayName": "Two Column Text Callout",
    "mainFunction": "main",
    "environment": [],
    "icon": {
        "id": "campaign",
        "color": {
            "type": "enum",
            "value": "green"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "heading": {
                        "title": "Section heading",
                        "type": "string",
                        "default": "Section heading",
                        "ui:metadata": {
                            "inlineEditable": true
                        }
                    },
                    "showTopBorder": {
                        "title": "Display horizontal divider at the top.",
                        "type": "boolean",
                        "default": true,
                        "ui:metadata": {
                            "quickOption": true
                        }
                    },
                    "callouts": {
                        "title": "Text callouts",
                        "description": "Enter the title and content for each callout.",
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 2,
                        "items": {
                            "type": "object",
                            "properties": {
                                "title": {
                                    "title": "Callout heading",
                                    "description": "The heading text.",
                                    "type": "string",
                                    "ui:metadata": {
                                        "inlineEditable": true
                                    }
                                },
                                "content": {
                                    "title": "Content",
                                    "description": "WYSIWYG content for the callout.",
                                    "type": "FormattedText",
                                    "ui:metadata": {
                                        "inlineEditable": true
                                    }
                                },
                                "imageConfiguration": {
                                    "title": "Image configuration",
                                    "required": [],
                                    "properties": {
                                        "image": {
                                            "title": "Image asset",
                                            "type": "string",
                                            "format": "matrix-asset-uri"
                                        },
                                        "caption": {
                                            "title": "Caption",
                                            "type": "string",
                                            "format": "multi-line",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "credit": {
                                            "title": "Credit",
                                            "type": "string",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "imagePlacement": {
                                            "title": "Image position",
                                            "enum": [
                                                "Below content",
                                                "Above content"
                                            ],
                                            "type": "string",
                                            "default": "Below content"
                                        }
                                    }
                                },
                                "buttonConfiguration": {
                                    "title": "Button configuration",
                                    "description": "Optionally add a link button at the bottom by filling out these fields.",
                                    "required": [],
                                    "properties": {
                                        "buttonText": {
                                            "title": "Button text",
                                            "type": "string",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "internalUrl": {
                                            "title": "Internal link (Matrix asset link)",
                                            "type": "string",
                                            "description": "Select a page/asset to link to. If this field is filled out, it will be used instead of the external link field below.",
                                            "format": "matrix-asset-uri"
                                        },
                                        "externalUrl": {
                                            "title": "External (manual) link",
                                            "type": "string",
                                            "description": "Enter the full URL, including https://. A diagonal arrow icon will be automatically added after the button text if the URL does not contain news.stanford.edu."
                                        },
                                        "isNewWindow": {
                                            "title": "Open link in a new window",
                                            "type": "boolean",
                                            "default": false
                                        }
                                    }
                                }
                            },
                            "required": []
                        }
                    }
                },
                "required": []
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "mockedUris": {
        "matrix-asset://stanfordNews/99100": {
            "type": "file",
            "path": "mocked-uris/99100.json"
        },
        "matrix-asset://stanfordNews/125800": {
            "type": "file",
            "path": "mocked-uris/125800.json"
        },
        "matrix-asset://stanfordNews/125801": {
            "type": "file",
            "path": "mocked-uris/125801.json"
        },
        "matrix-asset://stanfordNews/28192": {
            "type": "file",
            "path": "mocked-uris/28192.json"
        },
        "matrix-asset://stanfordNews/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/10": {
