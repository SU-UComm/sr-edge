<section data-component='two-column-text-callout'>
    <div
        class='{{containerClasses
                width="wide"
                marginTop="3"
                marginBottom="5"
            }}'
    >
        {{~#if showTopBorder~}}
            <hr
                class='su-border-black-30 dark:su-border-black su-rs-mb-3 su-h-1'
            />
        {{~/if~}}
        {{~#if heading~}}
            <h2
                class='su-type-2 su-font-serif su-text-center su-w-auto su-rs-mb-2 su-text-black dark:su-text-white'
            >
                {{heading}}
            </h2>
        {{~/if~}}
        <div
            class='{{containerClasses
                    paddingX=false
                    customClasses=(getStringByCondition
                        value=flexContainerLength
                        expectedValue='2'
                        trueResult='su-flex su-grid-gap su-flex-col md:su-max-w-800 lg:su-flex-row lg:su-items-stretch lg:*:su-basis-1/2 lg:su-max-w-[118.6rem] xl:su-px-50'
                        falseResult='su-flex su-grid-gap su-flex-col md:su-max-w-800'
                    )
                }}'
        >
        {{~#each calloutsData~}}
            {{> info-box width="full" paddingX=false containerClasses="su-flex" innerClasses="su-p-20 md:su-p-36 su-w-full" title=title imagePlacement=imagePlacement content=content imageData=imageData captionCredit=captionCredit buttonText=buttonText buttonUrl=buttonUrl isNewWindow=isNewWindow isRealExternalLink=isRealExternalLink}}
        {{~/each~}}
        </div>
    </div>
</section>