{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "header-component",
    "type": "edge",
    "version": "4.0.0",
    "namespace": "pnp-stanford-edge-components-hbs",
    "description": "Stanford university Header component.",
    "displayName": "Header",
    "mainFunction": "main",
    "environment": [
        {
            "name": "CONTENT_API",
            "required": true
        },
        {
            "name": "CONTENT_API_KEY",
            "required": true
        },
        {
            "name": "FB_JSON_URL",
            "required": true
        }
    ],
    "icon": {
        "id": "explore",
        "color": {
            "type": "enum",
            "value": "orange"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "dataUrl": {
                        "type": "string"
                    }
                },
                "required": ["dataUrl"]
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        }
    }
}
