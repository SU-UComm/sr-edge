<section data-component='basic-hero'>
    {{~#ifEquals updatesPage "yes"~}}
    <div class="{{getStringByCondition value=relation expectedValue="child" trueResult="su-rs-py-3" falseResult="su-rs-py-5"}} {{getStringByCondition value=backgroundColor expectedValue="cardinal" trueResult="su-bg-gradient-to-t su-from-cardinal-red-dark su-from-5% su-via-cardinal-red su-via-50% su-to-cardinal-red-dark su-to-95%" falseResult=""}} {{getStringByCondition value=backgroundColor expectedValue="digital red" trueResult="su-bg-digital-red" falseResult=""}} {{getStringByCondition value=parentData expectedValue=true trueResult="su-rs-mb-0" falseResult="su-rs-mb-3"}}"> 
        <div class='{{containerClasses width="wide" customClasses="su-grid su-grid-cols-6 su-grid-gap su-gap-y-0 md:su-grid-cols-12 su-text-white"}}'>
            <h1 class="su-font-serif su-drop-shadow-md su-mb-0 su-col-span-full lg:su-col-span-10 lg:su-col-start-2 {{getStringByCondition value=titleAlignment expectedValue="center" trueResult="su-text-center su-mx-auto" falseResult=""}} {{getStringByCondition value=relation expectedValue="child" trueResult="su-type-3" falseResult=""}} {{#ifEquals relation "child"}} {{getStringByCondition value=parentData.parentTitleAlignment expectedValue="center" trueResult="su-text-center su-mx-auto" falseResult=""}}{{/ifEquals}}">
                {{~#if parentData.parentTitle~}}
                {{{unescapeHtml parentData.parentTitle}}} 
                {{~else~}}
                {{{unescapeHtml title}}}
                {{~/if~}}
            </h1>
            {{~#if summary}}
            <div class="su-col-span-full lg:su-col-span-10 lg:su-col-start-2 xl:su-col-span-8 xl:su-col-start-3 su-font-serif su-mb-0 su-rs-mt-2 {{getStringByCondition value=relation expectedValue="child" trueResult="su-text-18" falseResult="su-text-[1.125em]"}}">
                {{{unescapeHtml summary}}}
            </div>
            {{~/if~}}
        </div>
    </div>
    {{~#if parentData.parentTitle~}}
    <div class='{{containerClasses width="wide" customClasses="su-grid su-grid-cols-6 su-grid-gap su-gap-y-0 md:su-grid-cols-12"}}'>
        <div class="su-col-span-full lg:su-col-span-10 lg:su-col-start-2 xl:su-col-span-8 xl:su-col-start-3">
            <nav aria-label="breadcrumb" class="su-rs-mb-3">
                <ul class="su-p-0 su-text-18 su-font-semibold">
                    <li class="su-inline after:su-content-['>'] after:su-mx-6">
                        <a href="{{parentData.parentUrl}}" class="!su-text-black dark:!su-text-white">
                            {{{unescapeHtml parentData.parentTitle}}}
                        </a>
                    </li>
                    <li aria-current="page" class="su-inline su-text-cardinal-red dark:su-text-dark-mode-red">
                        {{{unescapeHtml title}}}
                    </li>
                </ul>
            </nav>
            <h2>{{title}}</h2>
            {{~#if childSummary~}}
            <div class="su-text-[1.125em]" >
                {{{unescapeHtml childSummary}}}
            </div>
            {{~/if~}}
        </div>
    </div>
    {{~/if~}}
    {{~else~}}
    <div class='{{containerClasses}}'>
        <div class='su-flex su-justify-between su-flex-wrap su-rs-mb-5'>
            <h1
                class='su-font-serif su-mb-0
                    {{getStringByCondition
                        value=titleAlignment
                        expectedValue='center'
                        trueResult='su-text-center su-mx-auto'
                        falseResult=''
                    }}'
            >
                {{{unescapeHtml title}}}
            </h1>
        </div>
    </div>
    {{~/ifEquals~}}
</section>