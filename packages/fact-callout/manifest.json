{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "fact-callout",
    "type": "edge",
    "version": "4.1.1",
    "namespace": "stanford-apb",
    "description": "Display a fact on featured story pages",
    "displayName": "Fact callout",
    "mainFunction": "main",
    "icon": {
        "id": "fact_check",
        "color": {
            "type": "enum",
            "value": "yellow"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "displayConfiguration": {
                        "title": "Fact callout configuration",
                        "description": "These settings will determine what is displayed on the front-end.",
                        "required": [],
                        "properties": {
                            "icon": {
                                "title": "Fact icon",
                                "enum": [
                                    "pie chart",
                                    "bar graph"
                                ],
                                "type": "string",
                                "default": "pie chart"
                            },
                            "factText": {
                                "title": "Fact text",
                                "type": "string",
                                "format": "multi-line",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "indicatorPosition": {
                                "title": "Indicator position",
                                "enum": [
                                    "top",
                                    "bottom"
                                ],
                                "type": "string",
                                "default": "top"
                            },
                            "width": {
                                "title": "Fact width",
                                "description": "This option sets the width of the component, please note that this option will only work on featured story pages, not basic story pages.",
                                "enum": [
                                    "Wide",
                                    "Narrow"
                                ],
                                "type": "string",
                                "default": "Wide"
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basic": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}