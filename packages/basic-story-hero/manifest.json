{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "basic-story-hero",
    "type": "edge",
    "version": "5.0.0",
    "namespace": "stanford-apb",
    "description": "The basic story hero appears on basic story pages",
    "displayName": "Basic story hero",
    "mainFunction": "main",
    "icon": {
        "id": "flag",
        "color": {
            "type": "enum",
            "value": "pink"
        }
    },
    "environment": [
        {
            "name": "BASE_DOMAIN",
            "required": true
        }
    ],
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {},
                "required": []
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}