{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "media-feature",
    "type": "edge",
    "version": "4.0.1",
    "namespace": "pnp-stanford-edge-components-hbs",
    "description": "The media feature component is used to feature a singular podcast or book.",
    "displayName": "Media feature",
    "mainFunction": "main",
    "icon": {
        "id": "radio",
        "color": {
            "type": "enum",
            "value": "teal"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "required": [],
                "type": "object",
                "properties": {
                    "contentConfiguration": {
                        "title": "The media feature component's content.",
                        "required": [],
                        "properties": {
                            "backgroundImage": {
                                "title": "Background image",
                                "type": "string",
                                "format": "matrix-asset-uri"
                            },
                            "image": {
                                "title": "Image",
                                "type": "string",
                                "format": "matrix-asset-uri"
                            },
                            "title": {
                                "title": "Title",
                                "type": "string"
                            },
                            "mediaType": {
                                "title": "Media type",
                                "enum": ["Podcast", "Book", "Magazine"],
                                "type": "string",
                                "default": "Podcast"
                            },
                            "teaserText": {
                                "title": "Teaser text",
                                "type": "string",
                                "format": "multi-line"
                            },
                            "linkUrl": {
                                "title": "Link URL",
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "mockedUris": {
        "matrix-asset://matrixIdentifier/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/5": {
            "type": "file",
