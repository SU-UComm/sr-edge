{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "campaign-cta",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-components",
    "description": "This component serves as a preview & to promote campaign pages.",
    "displayName": "Campaign CTA",
    "mainFunction": "main",
    "icon": {
        "id": "star",
        "color": {
            "type": "enum",
            "value": "gray"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "displayConfiguration": {
                        "title": "Campaign CTA configuration",
                        "description": "These options will output to the frontend of the Campaign CTA component",
                        "required": [
                            "image"
                        ],
                        "properties": {
                            "image": {
                                "title": "Background image",
                                "description": "This image will be displayed in the background of the component",
                                "type": "string",
                                "format": "matrix-asset-uri"
                            },
                            "imageOverlay": {
                                "title": "Image gradient overlay",
                                "description": "An overlay is required to maintain accessibility and readability. Use this to control the darkness of the overlay.",
                                "type": "string",
                                "default": "dark",
                                "enum": [
                                    "light",
                                    "medium",
                                    "dark"
                                ]
                            },
                            "title": {
                                "title": "Title",
                                "description": "The campaign title",
                                "type": "string",
                                "default": "",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "description": {
                                "title": "Description",
                                "description": "The campaign text content",
                                "type": "string",
                                "format": "multi-line",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "linkUrl": {
                                "title": "CTA Destination",
                                "description": "The CTA link destination",
                                "type": "string",
                                "format": "matrix-asset-uri"
                            },
                            "linkText": {
                                "title": "CTA text",
                                "description": "The CTA title",
                                "type": "string",
                                "default": "Learn more",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://stanfordNews/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/10": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/3": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/7": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/8": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/11": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/163293": {
            "type": "file",
            "path": "mocked-uris/163293.json"
        },
        "matrix-asset://stanfordNews/141464": {
            "type": "file",
            "path": "mocked-uris/141464.json"
        },
        "matrix-asset://stanfordNews/170202": {
            "type": "file",
            "path": "mocked-uris/170202.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        },
        "rm": {
