{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "media-carousel",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-components",
    "description": "Links to media, displayed as cards in a carousel.",
    "displayName": "Media carousel",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        },
        {
            "name": "BASE_DOMAIN",
            "required": true
        }
    ],
    "icon": {
        "id": "auto_stories",
        "color": {
            "type": "enum",
            "value": "gray"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "headingConfiguration": {
                        "title": "Section Heading Configuration",
                        "description": "The heading for the section, appearing before the grid of cards. If the title is empty, the heading and call to action link will be hidden.",
                        "type": "object",
                        "required": [],
                        "properties": {
                            "title": {
                                "title": "Heading",
                                "type": "string",
                                "default": "",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "ctaUrl": {
                                "title": "Matrix Asset Link",
                                "type": "string",
                                "description": "Select an asset to link to. If this field is filled out, it will be used instead of the manual link",
                                "format": "matrix-asset-uri"
                            },
                            "ctaManualUrl": {
                                "title": "Manual Link",
                                "type": "string",
                                "default": "",
                                "description": "Enter the full URL, including https://"
                            },
                            "ctaText": {
                                "title": "Link text",
                                "type": "string",
                                "default": "",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "ctaNewWindow": {
                                "title": "Open link in a new window",
                                "type": "boolean",
                                "default": false
                            }
                        }
                    },
                    "cards": {
                        "title": "Cards",
                        "description": "Enter the details for each card.",
                        "type": "array",
                        "minItems": 1,
                        "maxItems": 5,
                        "items": {
                            "type": "object",
                            "properties": {
                                "cardType": {
                                    "type": "string",
                                    "title": "Type",
                                    "default": "Book",
                                    "enum": ["Book", "Magazine", "Podcast"]
                                },
                                "image": {
                                    "type": "string",
                                    "title": "Image",
                                    "format": "matrix-asset-uri"
                                },
                                "title": {
                                    "type": "string",
                                    "title": "Title"
                                },
                                "author": {
                                    "type": "string",
                                    "title": "Author"
                                },
                                "teaserText": {
                                    "type": "string",
                                    "title": "Teaser Text",
                                    "format": "multi-line"
                                },
                                "linkUrl": {
                                    "type": "string",
                                    "title": "Link Url"
                                }
                            },
                            "required": ["cardType", "image", "title"]
                        }
                    }
                },
                "required": []
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://stanfordNews/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/10": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://stanfordNews/163293": {
            "type": "file",
            "path": "mocked-uris/163293.json"
        },
        "matrix-asset://stanfordNews/163591": {
            "type": "file",
            "path": "mocked-uris/163591.json"
        },
        "matrix-asset://stanfordNews/163904": {
            "type": "file",
            "path": "mocked-uris/163904.json"
        },
        "matrix-asset://stanfordNews/163985": {
            "type": "file",
            "path": "mocked-uris/163985.json"
        },
        "matrix-asset://stanfordNews/159454": {
            "type": "file",
            "path": "mocked-uris/159454.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}
