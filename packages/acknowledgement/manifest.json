{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "acknowledgement",
    "type": "edge",
    "version": "4.0.3",
    "namespace": "stanford-apb",
    "description": "Acknowledgement and title area.",
    "displayName": "Acknowledgement",
    "mainFunction": "main",
    "icon": {
        "id": "menu_book",
        "color": {
            "type": "enum",
            "value": "red"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "properties": {
                    "title": {
                        "title": "Acknowledgement Title",
                        "default": "For more information",
                        "description": "This title is read out for screen readers, to provide context and is not displayed visually.",
                        "type": "string"
                    },
                    "content": {
                        "title": "Acknowledgement",
                        "type": "FormattedText",
                        "default": [
                            {
                                "type": "tag",
                                "tag": "p",
                                "children": [
                                    {
                                        "type": "text",
                                        "value": "Add WYSIWYG content for this component."
                                    }
                                ]
                            }
                        ],
                        "ui:metadata": {
                            "inlineEditable": true,
                            "quickOption": false
                        }
                    }
                },
                "required": [
                    "content",
                    "title"
                ]
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}