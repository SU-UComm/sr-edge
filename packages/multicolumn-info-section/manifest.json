{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "multicolumn-info-section",
    "type": "edge",
    "version": "4.1.73",
    "namespace": "stanford-apb",
    "description": "The multicolumn info section displays a title in column 1, WYSIWYG content in column 2, and an optional text callout in column 3",
    "displayName": "Multicolumn Info Section",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        }
    ],
    "icon": {
        "id": "view_column",
        "color": {
            "type": "enum",
            "value": "orange"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "border": {
                        "title": "Include bottom border?",
                        "description": "Uncheck to remove the line that displays across the bottom of the component.",
                        "type": "boolean",
                        "default": true,
                        "ui:metadata": {
                            "quickOption": true
                        }
                    },
                    "callout": {
                        "title": "Include text callout?",
                        "default": true,
                        "type": "boolean",
                        "ui:metadata": {
                            "quickOption": true
                        }
                    },
                    "colOne": {
                        "required": [
                            "title"
                        ],
                        "title": "Column One",
                        "description": "The title of the section. This is required and displays in the first column.",
                        "properties": {
                            "title": {
                                "title": "Title",
                                "description": "The title text.",
                                "type": "string",
                                "default": "Lorem ipsum dolor",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            }
                        }
                    },
                    "colTwo": {
                        "required": [
                            "infoText"
                        ],
                        "title": "Column Two",
                        "description": "Info text is required and displays in the second column.",
                        "properties": {
                            "infoText": {
                                "title": "Info text",
                                "description": "Descriptive, informational text.",
                                "type": "FormattedText",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "addButton": {
                                "title": "Add CTA button?",
                                "default": false,
                                "type": "boolean",
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            }
                        },
                        "allOf": [
                            {
                                "if": {
                                    "required": [],
                                    "properties": {
                                        "addButton": {
                                            "const": true
                                        }
                                    }
                                },
                                "then": {
                                    "required": [],
                                    "properties": {
                                        "buttonConfiguration": {
                                            "title": "Button configuration",
                                            "description": "Optionally add a link button at the bottom by filling out these fields.",
                                            "required": [],
                                            "properties": {
                                                "buttonText": {
                                                    "title": "Button text",
                                                    "type": "string",
                                                    "ui:metadata": {
                                                        "inlineEditable": true
                                                    }
                                                },
                                                "infoInternalUrl": {
                                                    "title": "Internal link (Matrix asset link)",
                                                    "type": "string",
                                                    "description": "Select a page/asset to link to. If this field is filled out, it will be used instead of the external link field below.",
                                                    "format": "matrix-asset-uri"
                                                },
                                                "externalUrl": {
                                                    "title": "External (manual) link",
                                                    "type": "string",
                                                    "description": "Enter the full URL, including https://. A diagonal arrow icon will be automatically added after the button text if the URL does not contain news.stanford.edu."
                                                },
                                                "isNewWindow": {
                                                    "title": "Open link in a new window",
                                                    "type": "boolean",
                                                    "default": false
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        ]
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "callout": {
                                    "const": true
                                }
                            },
                            "required": [
                                "callout"
                            ]
                        },
                        "then": {
                            "properties": {
                                "colThree": {
                                    "required": [],
                                    "title": "Column Three",
                                    "description": "A text callout component will display in the third column.",
                                    "properties": {
                                        "title": {
                                            "title": "Heading",
                                            "description": "The text callout heading text.",
                                            "type": "string",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "content": {
                                            "title": "Content",
                                            "description": "The text content the text callout sidebar.",
                                            "type": "FormattedText",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "imageConfiguration": {
                                            "title": "Image configuration",
                                            "required": [],
                                            "properties": {
                                                "image": {
                                                    "title": "Image asset",
                                                    "type": "string",
                                                    "format": "matrix-asset-uri"
                                                },
                                                "caption": {
                                                    "title": "Caption",
                                                    "type": "string",
                                                    "format": "multi-line",
                                                    "ui:metadata": {
                                                        "inlineEditable": true
                                                    }
                                                },
                                                "credit": {
                                                    "title": "Credit",
                                                    "type": "string",
                                                    "ui:metadata": {
                                                        "inlineEditable": true
                                                    }
                                                },
                                                "imagePlacement": {
                                                    "title": "Image position",
                                                    "enum": [
                                                        "Below content",
                                                        "Above content"
                                                    ],
                                                    "type": "string",
                                                    "default": "Below content"
                                                }
                                            }
                                        },
                                        "buttonConfiguration": {
                                            "title": "Button configuration",
                                            "description": "Optionally add a link button at the bottom by filling out these fields.",
                                            "required": [],
                                            "properties": {
                                                "buttonText": {
                                                    "title": "Button text",
                                                    "type": "string",
                                                    "ui:metadata": {
                                                        "inlineEditable": true
                                                    }
                                                },
                                                "internalUrl": {
                                                    "title": "Internal link (Matrix asset link)",
                                                    "type": "string",
                                                    "description": "Select a page/asset to link to. If this field is filled out, it will be used instead of the external link field below.",
                                                    "format": "matrix-asset-uri"
                                                },
                                                "externalUrl": {
                                                    "title": "External (manual) link",
                                                    "type": "string",
                                                    "description": "Enter the full URL, including https://. A diagonal arrow icon will be automatically added after the button text if the URL does not contain news.stanford.edu."
                                                },
                                                "isNewWindow": {
                                                    "title": "Open link in a new window",
                                                    "type": "boolean",
                                                    "default": false
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "required": []
                        }
                    }
                ]
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "mockedUris": {
        "matrix-asset://matrixIdentifier/1": {
            "type": "file",
