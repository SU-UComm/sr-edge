<div data-component="multicolumn-info-section">
    <div class="{{containerClasses width="wide" paddingX=true}}">
        <div class="su-grid lg:su-grid-cols-12 su-grid-gap su-gap-y-0 su-max-w-800 su-mx-auto lg:su-max-w-none {{getStringByCondition value=border expectedValue=true trueResult="su-border-b su-rs-pb-5 su-border-b-black-30 dark:su-border-b-black" falseResult="" }}">
            {{#if editMode}}
                <h2 class="su-type-2 su-break-words su-col-span-full lg:su-col-span-8 xl:su-col-span-3" data-sq-field="title">
                    {{title}}
                </h2>
            {{else}}
                {{#if title}}
                    <h2 class="su-type-2 su-break-words su-col-span-full lg:su-col-span-8 xl:su-col-span-3">
                        {{title}}
                    </h2>
                {{/if}}
            {{/if}}
            <div class="su-col-span-full lg:su-col-span-8 {{getStringByCondition value=callout expectedValue=true trueResult="xl:su-col-span-6 xl:last:[&>*]:su-mb-0" falseResult="xl:su-col-span-7 last:[&>*]:su-mb-0" }}">
                {{#if editMode}}
                    <div data-sq-field="infoText">{{{infoText}}}</div>
                {{else}}
                    {{#if infoText}}
                        {{{infoText}}}
                    {{/if}}
                {{/if}}
                {{#if buttonData}}
                    {{> link-button buttonText=buttonData.buttonText isNewWindow=buttonData.isNewWindow buttonUrl=buttonData.buttonUrl isRealExternalLink=buttonData.isRealExternalLink customClasses="su-rs-mt-1 su-order-3" }}
                {{/if}}
            </div>
            {{#if editMode}}
                <div class="su-break-words su-col-span-full lg:su-col-span-4 lg:su-col-start-9 xl:su-col-span-3">
                    {{> info-box 
                        width="full" 
                        paddingX=false 
                        containerClasses="su-break-words su-col-span-full lg:su-col-span-4 lg:su-col-start-9 xl:su-col-span-3" 
                        innerClasses="su-p-20 md:su-p-36 lg:su-px-20 lg:su-py-26" 
                        title=infoBoxData.title 
                        imagePlacement=infoBoxData.imagePlacement 
                        content=infoBoxData.content 
                        imageData=infoBoxData.imageData 
                        captionCredit=infoBoxData.captionCredit 
                        buttonText=infoBoxData.buttonText 
                        buttonUrl=infoBoxData.buttonUrl 
                        isNewWindow=infoBoxData.isNewWindow 
                        isRealExternalLink=infoBoxData.isRealExternalLink
                        editMode=editMode}}
                </div>
            {{else}}
                {{#if infoBoxData}}
                    {{> info-box 
                        width="full" 
                        paddingX=false 
                        containerClasses="su-break-words su-col-span-full lg:su-col-span-4 lg:su-col-start-9 xl:su-col-span-3" 
                        innerClasses="su-p-20 md:su-p-36 lg:su-px-20 lg:su-py-26" 
                        title=infoBoxData.title 
                        imagePlacement=infoBoxData.imagePlacement 
                        content=infoBoxData.content 
                        imageData=infoBoxData.imageData 
                        captionCredit=infoBoxData.captionCredit 
                        buttonText=infoBoxData.buttonText 
                        buttonUrl=infoBoxData.buttonUrl 
                        isNewWindow=infoBoxData.isNewWindow 
                        isRealExternalLink=infoBoxData.isRealExternalLink
                        editMode=editMode}}
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>