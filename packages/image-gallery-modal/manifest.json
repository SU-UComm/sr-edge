{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "image-gallery-modal",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-components",
    "description": "An image gallery that opens in a modal.",
    "displayName": "Image gallery with modal",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        },
        {
            "name": "BASE_DOMAIN",
            "required": true
        }
    ],
    "icon": {
        "id": "auto_awesome_mosaic",
        "color": {
            "type": "enum",
            "value": "gray"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "contentConfiguration": {
                        "required": [],
                        "properties": {
                            "layout": {
                                "title": "Layout",
                                "type": "string",
                                "enum": [
                                    "Title & Content",
                                    "Content Only"
                                ],
                                "default": "Title & Content",
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            },
                            "caption": {
                                "title": "Gallery caption",
                                "type": "string",
                                "format": "multi-line",
                                "default": "",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "credit": {
                                "title": "Gallery credit",
                                "type": "string",
                                "default": "",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            },
                            "images": {
                                "title": "Images",
                                "type": "array",
                                "minItems": 4,
                                "maxItems": 20,
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "image"
                                    ],
                                    "properties": {
                                        "image": {
                                            "title": "Image asset",
                                            "format": "matrix-asset-uri",
                                            "type": "string"
                                        },
                                        "caption": {
                                            "title": "Description",
                                            "description": "The image's caption",
                                            "type": "string",
                                            "format": "multi-line",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "allOf": [
                            {
                                "if": {
                                    "required": [],
                                    "properties": {
                                        "layout": {
                                            "const": "Title & Content"
                                        }
                                    }
                                },
                                "then": {
                                    "required": [],
                                    "properties": {
                                        "title": {
                                            "title": "Heading",
                                            "type": "string",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "summary": {
                                            "title": "Summary",
                                            "type": "string",
                                            "ui:metadata": {
                                                "inlineEditable": true
                                            }
                                        },
                                        "summaryAlign": {
                                            "title": "Summary alignment",
                                            "type": "string",
                                            "enum": [
                                                "left",
                                                "center"
                                            ],
                                            "default": "left"
                                        }
                                    }
                                }
                            }
                        ]
                    },
                    "displayConfiguration": {
                        "required": [],
                        "properties": {
                            "displayIconHeading": {
                                "title": "Show Icon Heading",
                                "type": "boolean",
                                "default": true,
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            },
                            "backgroundColor": {
                                "title": "Background Color",
                                "enum": [
                                    "Grey",
                                    "Transparent"
                                ],
                                "type": "string",
                                "default": "Grey",
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            },
                            "width": {
                                "title": "Width",
                                "type": "string",
                                "enum": [
                                    "Wide",
                                    "Content"
                                ],
                                "default": "Wide",
                                "ui:metadata": {
                                    "quickOption": true
                                }
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
