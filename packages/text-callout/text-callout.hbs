<section data-component="text-callout">
    {{#if editMode}}
        {{> info-box 
            width="full" 
            paddingX=false 
            containerClasses="" 
            innerClasses="su-p-20 md:su-p-36" 
            title=title 
            imagePlacement=image.placement 
            content=content 
            imageData=image 
            captionCredit=image.captionCredit 
            caption=image.caption
            credit=image.credit
            buttonText=button.title 
            buttonUrl=button.url 
            isNewWindow=button.isNewWindow 
            isRealExternalLink=button.isRealExternalLink
            editMode=editMode}}
    {{else}}
        {{> info-box 
            width="full" 
            paddingX=false 
            containerClasses="" 
            innerClasses="su-p-20 md:su-p-36" 
            title=title 
            imagePlacement=image.placement 
            content=content 
            imageData=image 
            captionCredit=image.captionCredit 
            caption=image.caption
            credit=image.credit
            buttonText=button.title 
            buttonUrl=button.url 
            isNewWindow=button.isNewWindow 
            isRealExternalLink=button.isRealExternalLink
            editMode=editMode}}
    {{/if}}
</section>