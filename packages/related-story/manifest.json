{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "related-story",
    "type": "edge",
    "version": "6.0.0",
    "namespace": "stanford-components",
    "description": "Displays a related story on a featured story",
    "displayName": "Related story",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        },
        {
            "name": "BASE_DOMAIN",
            "required": true
        }
    ],
    "icon": {
        "id": "ads_click",
        "color": {
            "type": "enum",
            "value": "pink"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "contentConfiguration": {
                        "title": "Related story content",
                        "description": "Select an asset ID to be featured as a related story.",
                        "type": "object",
                        "required": [
                            "story"
                        ],
                        "properties": {
                            "story": {
                                "title": "Related story",
                                "type": "string",
                                "format": "matrix-asset-uri"
                            },
                            "descriptionOverride": {
                                "title": "Description",
                                "description": "This field will override the related story description that comes from the selected story asset.",
                                "type": "string",
                                "format": "multi-line",
                                "ui:metadata": {
                                    "inlineEditable": true
                                }
                            }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://stanfordNews/3": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/7": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/8": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/11": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/14": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://stanfordNews/163459": {
            "type": "file",
            "path": "mocked-uris/163459.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}