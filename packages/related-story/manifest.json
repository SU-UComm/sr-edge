{
    "$schema": "http://localhost:3000/schemas/v1.json#",
    "name": "related-story",
    "type": "edge",
    "version": "2.0.3",
    "namespace": "pnp-stanford-edge-components",
    "description": "Displays a related story on a featured story",
    "displayName": "Related story",
    "mainFunction": "main",
    "environment": [
        {
            "name": "API_IDENTIFIER",
            "required": true
        },
        {
            "name": "BASE_DOMAIN",
            "required": true
        }
    ],
    "icon": {
        "id": "ads_click",
        "color": {
          "type": "enum",
          "value": "pink"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.js",
            "input": {
                "type": "object",
                "required": [],
                "properties": {
                    "contentConfiguration": {
                        "title": "Related story content",
                        "description": "Select an asset ID to be featured as a related story.",
                        "type": "object",
                        "required": [
                          "story"
                        ],
                        "properties": {
                          "story": {
                            "title": "Related story",
                            "type": "string",
                            "format": "matrix-asset-uri"
                          },
                          "descriptionOverride": {
                            "title": "Description",
                            "description": "This field will override the related story description that comes from the selected story asset.",
                            "type": "string",
                            "format": "multi-line"
                          }
                        }
                    }
                }
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "staticFiles": {
        "locationRoot": "./"
    },
    "mockedUris": {
        "matrix-asset://matrixIdentifier/1": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/2": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/5": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/6": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/9": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/10": {
            "type": "file",
            "path": "mocked-uris/image.json"
        },
        "matrix-asset://matrixIdentifier/3": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://matrixIdentifier/7": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://matrixIdentifier/8": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://matrixIdentifier/11": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://matrixIdentifier/14": {
            "type": "file",
            "path": "mocked-uris/page.json"
        },
        "matrix-asset://api-identifier/63412": {
            "type": "file",
            "path": "mocked-uris/63412.json"
        }
    },
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        },
        "basicstory": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "example-data/preview.data.json"
                    },
                    "wrapper": {
                        "path": "previews/basicstory.html"
                    }
                }
            }
        }
    }
}
