<section data-component="combined-content-grid">
    <div class="{{containerClasses width="large"}}">
        {{> linked-heading title=headingData.title isAlwaysLight=headingData.isAlwaysLight ctaLink=headingData.ctaLink ctaNewWindow=headingData.ctaNewWindow ctaText=headingData.ctaText}}
        <div class="su-w-full su-component-featured-grid">
            <div class="su-flex su-flex-wrap lg:su-flex-nowrap su-gap-[68px] md:su-gap-72 lg:su-gap-[160px]">
                <div class="su-relative su-flex su-flex-wrap md:su-flex-nowrap lg:su-flex-wrap lg:su-order-2 md:su-items-start md:su-content-start su-gap-80 md:su-gap-72 lg:su-gap-[76px] md:su-basis-[39.5%] lg:su-basis-[30%] su-grow before:su-w-full before:md:su-w-full before:su-absolute before:su-bg-black-30 dark:before:su-bg-black before:su-h-px before:lg:su-h-full before:su-left-0 before:su--bottom-35 before:lg:su-bottom-auto before:lg:su-top-0 before:md:su-left-0 lg:before:su-w-px before:lg:su--left-80">
                    <div class="su-relative su-w-full md:su-h-full lg:su-h-auto">
                    {{#> sidebar-list title=eventData.title icon=eventData.icon ctaText=eventData.ctaText ctaUrl=eventData.ctaUrl ctaIcon=eventData.ctaIcon headingLvl=eventData.headingLvl}}
                        {{#> horizontal-card-grid orientation="vertical"}}
                            {{~#each eventData.data~}}
                                <div class="su-relative su-grow">
                                    {{> card-horizontal cardSize="small" title=title description=description liveUrl=liveUrl imageUrl=imageUrl imageAlt=imageAlt taxonomy=taxonomy taxonomyUrl=taxonomyUrl type=type date=date endDate=endDate videoUrl=videoUrl uniqueID=uniqueID iconType=iconType}}
                                </div>
                            {{~/each~}}
                        {{/ horizontal-card-grid}}
                    {{/ sidebar-list}}
                    </div>
                    <div class="su-relative su-w-full md:su-h-full lg:su-h-auto before:su-w-full before:su-absolute before:su-bg-black-30 dark:before:su-bg-black before:su-h-px md:before:su-h-full md:before:su-w-px before:su-left-0 md:before:su--left-38 before:su--top-40 md:before:su-top-0 lg:before:su--top-38 lg:before:su-left-0 lg:before:su-w-full lg:before:su-h-px">
                    {{#> sidebar-list title=announcementData.title icon=announcementData.icon ctaText=announcementData.ctaText ctaUrl=announcementData.ctaUrl ctaIcon=announcementData.ctaIcon headingLvl=announcementData.headingLvl}}
                        {{#> horizontal-card-grid orientation="vertical"}}
                            {{~#each announcementData.data~}} 
                            <div class="su-relative su-grow">
                                <article class="su-relative su-mt-0 su-gap-6 su-flex su-flex-wrap">
                                    <p id="aria-announcement-{{@index}}" class="su-wysiwyg-content su-w-full su-text-black dark:su-text-white su-mb-0 su-text-18 su-leading-[2.25rem] su-font-sans">{{{description}}}</p>
                                    <a href="{{liveUrl}}" aria-labelledby="aria-announcement-{{@index}}" class="su-group su-transition dark:su-text-digital-blue-vivid su-text-digital-blue su-flex su-flex-nowrap su-gap-02em su-items-center su-leading-[125%] su-text-16 su-font-semibold su-no-underline su-stretched-link">
                                        <span class="group-hocus:su-underline">Read more</span>
                                        {{~#if isRealExternalLink~}}
                                            <span class="su-sr-only">(link is external)</span>
                                            {{> svg-icons strokeWidth=3.5 icon="external arrow unstyled" classes="su-transition su-will-change-transform group-hocus:su-translate-x-02em group-hocus:su--translate-y-02em su-w-08em su-text-digital-blue group-hocus:su-text-digital-red dark:su-text-digital-blue-vivid dark:group-hocus:su-text-dark-mode-red su-mt-0"}}
                                        {{~else~}}
                                            {{> svg-icons icon="chevron right" classes="su-fill-transparent su-stroke-current su-transition group-hocus:su-translate-x-01em"}}
                                        {{~/if~}}
                                    </a>
                                </article>
                            </div>
                            {{~/each~}}
                        {{/ horizontal-card-grid}}
                    {{/ sidebar-list}}
                    </div>
                </div>
                <div class="md:su-basis-[58.333%] lg:su-basis-[64.5%] su-grow">
                    {{> featured-grid items=cardData alignment="left" isNested=true hasNestedGrid=false gridType="stories" includeVerticalVideo=false}}
                </div>
            </div>
        </div>
    </div>
    <section data-modal="modal-wrapper">
    {{~#each modalData~}}
        {{#> modal-content uniqueID=uniqueID titleID=modalData.titleID ariaTitle=modalData.title}}
            {{> embed-video isVertical=isVertical classes=classes videoId=videoId noAutoPlay=noAutoPlay title=title}}
        {{/ modal-content}}
    {{~/each~}}
    </section>
</section>